// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum AccountType {
  CLIENT
  FREELANCER
  ADMIN
}

enum BillingType {
  FIXED
  HOURLY
}

enum HoursPerWeek {
  LESS_THAN_10
  FROM_11_TO_20
  FROM_21_TO_30
  MORE_THAN_30
}

enum ExperienceLevel {
  JUNIOR
  MID
  SENIOR
}

enum ProjectType {
  ONE_TIME
  CONTINUOUS
}

enum JobStatus {
  DRAFT
  PUBLISHED
  CLOSED
  REJECTED
}

enum JobLanguage {
  ENGLISH
  POLISH
}

model Company {
  id               String    @id @default(cuid())
  regon            String    @unique
  nip              String    @unique
  name             String
  voivodeship      String?
  county           String?
  commune          String?
  locality         String?
  postalCode       String?
  street           String?
  propertyNumber   String?
  apartmentNumber  String?
  type             String?
  isActive         Boolean   @default(true)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  users            User[]

  @@index([nip])
  @@index([regon])
}

model User {
  id            String          @id @default(cuid())
  email         String          @unique
  /** Null for OAuth-only users (e.g. Google). */
  password      String?
  /** Google OAuth sub (subject) – unique per Google account. */
  googleId      String?         @unique
  /** Avatar image URL (stored in S3-compatible storage, compressed to 500x500). */
  avatarUrl     String?
  name          String?
  surname       String?
  /** Phone number – used only for important notifications about application status. */
  phone         String?
  /** Linked company (NIP from Company.nip). */
  companyId     String?
  accountType   AccountType?
  language      JobLanguage @default(POLISH)
  defaultMessage String?        @db.Text
  /** Version id of accepted terms of service, e.g. "1770551960". "none" when no document was configured. */
  acceptedTermsVersion      String?
  /** When the user last accepted the terms of service. */
  acceptedTermsAt            DateTime?
  /** Version id of accepted privacy policy, e.g. "1770551960". "none" when no document was configured. */
  acceptedPrivacyPolicyVersion String?
  /** When the user last accepted the privacy policy. */
  acceptedPrivacyPolicyAt    DateTime?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  company       Company?        @relation(fields: [companyId], references: [id], onDelete: SetNull)
  jobs          Job[]
  applications  JobApplication[]
  favorites     Favorite[]
  skills        UserSkill[]
  passwordResetTokens PasswordResetToken[]
  profiles      Profile[]
  notificationPreferences NotificationPreference[]
  notificationLogs        NotificationLog[]

  @@index([companyId])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
}

model Category {
  id           String               @id @default(cuid())
  slug         String               @unique
  createdAt    DateTime             @default(now())
  updatedAt    DateTime             @updatedAt
  jobs         Job[]
  translations CategoryTranslation[]
}

model CategoryTranslation {
  id         String          @id @default(cuid())
  categoryId String
  language   JobLanguage
  name       String
  category   Category        @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  createdAt  DateTime        @default(now())
  updatedAt  DateTime        @updatedAt

  @@unique([categoryId, language])
  @@index([categoryId])
  @@index([language])
}

model Location {
  id        String    @id @default(cuid())
  name      String    @unique
  slug      String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  jobs      Job[]
  profiles  Profile[]
}

model Skill {
  id            String        @id @default(cuid())
  name          String        @unique
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  jobSkills     JobSkill[]
  userSkills    UserSkill[]
}

model Job {
  id              String          @id @default(cuid())
  title           String
  description     String
  categoryId      String
  authorId        String
  status          JobStatus  @default(DRAFT)
  language        JobLanguage @default(POLISH)
  billingType     BillingType
  hoursPerWeek    HoursPerWeek?   // when HOURLY
  rate            Decimal?       @db.Decimal(12, 2)
  rateNegotiable  Boolean        @default(false)
  currency        String         @db.VarChar(3)
  experienceLevel ExperienceLevel
  locationId      String?
  isRemote        Boolean        @default(false)
  projectType     ProjectType
  deadline        DateTime?      // last day to submit offers (createdAt + offerDays)
  closedAt        DateTime?      // when job was closed (manually or automatically)
  rejectedAt      DateTime?     // when admin rejected the job
  rejectedReason  String?       @db.Text  // admin's reason for rejection (for author to fix)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  category        Category       @relation(fields: [categoryId], references: [id], onDelete: Restrict)
  author          User           @relation(fields: [authorId], references: [id], onDelete: Cascade)
  location        Location?      @relation(fields: [locationId], references: [id], onDelete: SetNull)
  skills          JobSkill[]
  applications    JobApplication[]
  favoritedBy     Favorite[]
  notificationLogs NotificationLog[]

  @@index([categoryId])
  @@index([authorId])
  @@index([status])
  @@index([language])
  @@index([createdAt])
  @@index([locationId])
}

model JobApplication {
  id          String   @id @default(cuid())
  jobId       String
  freelancerId String
  message     String?  @db.Text
  createdAt   DateTime @default(now())
  job         Job      @relation(fields: [jobId], references: [id], onDelete: Cascade)
  freelancer  User     @relation(fields: [freelancerId], references: [id], onDelete: Cascade)

  @@unique([jobId, freelancerId])
  @@index([jobId])
  @@index([freelancerId])
}

model Favorite {
  id        String   @id @default(cuid())
  userId    String
  jobId     String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  job       Job      @relation(fields: [jobId], references: [id], onDelete: Cascade)

  @@unique([userId, jobId])
  @@index([userId])
  @@index([jobId])
}

model JobSkill {
  id        String   @id @default(cuid())
  jobId     String
  skillId   String
  job       Job      @relation(fields: [jobId], references: [id], onDelete: Cascade)
  skill     Skill    @relation(fields: [skillId], references: [id], onDelete: Cascade)

  @@unique([jobId, skillId])
  @@index([jobId])
  @@index([skillId])
}

model UserSkill {
  id        String   @id @default(cuid())
  userId    String
  skillId   String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  skill     Skill    @relation(fields: [skillId], references: [id], onDelete: Cascade)

  @@unique([userId, skillId])
  @@index([userId])
  @@index([skillId])
}

model Profile {
  id          String      @id @default(cuid())
  name        String
  slug        String      @unique
  website     String?
  email       String?
  phone       String?
  isVerified  Boolean     @default(false)
  aboutUs     String?     @db.Text
  locationId  String?
  ownerId     String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  owner       User        @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  location    Location?   @relation(fields: [locationId], references: [id], onDelete: SetNull)

  @@index([ownerId])
  @@index([slug])
  @@index([locationId])
}

model BenchmarkContent {
  id      String   @id @default(cuid())
  file    String   @unique
  content String   @db.Text
}

enum MailerLogStatus {
  PENDING
  QUEUED
  SENT
  DELIVERED
  FAILED
  BOUNCED
  OPENED
  CLICKED
  RECEIVED
  SPAM_COMPLAINT
}

model MailerLog {
  id             String          @id @default(cuid())
  recipientEmail String
  subject        String
  content        String          @db.Text
  status         MailerLogStatus @default(PENDING)
  messageId      String?
  errorMessage   String?         @db.Text
  sentAt         DateTime?
  createdAt      DateTime        @default(now())
}

// ─── Notification system ─────────────────────────────────────────────

enum NotificationType {
  NEW_JOB_MATCHING_SKILLS
}

enum NotificationFrequency {
  INSTANT
  DAILY_DIGEST
}

/// Per-user, per-notification-type preference.
/// When a row does not exist the notification is considered ENABLED with INSTANT frequency (default).
model NotificationPreference {
  id          String                @id @default(cuid())
  userId      String
  type        NotificationType
  enabled     Boolean               @default(true)
  frequency   NotificationFrequency @default(INSTANT)
  createdAt   DateTime              @default(now())
  updatedAt   DateTime              @updatedAt
  user        User                  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, type])
  @@index([userId])
}

/// Log of sent/pending notifications to avoid duplicates and power daily digests.
model NotificationLog {
  id          String              @id @default(cuid())
  userId      String
  type        NotificationType
  jobId       String?
  /// Whether this notification has already been dispatched (email sent).
  dispatched  Boolean             @default(false)
  createdAt   DateTime            @default(now())
  user        User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  job         Job?                @relation(fields: [jobId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([jobId])
  @@index([dispatched, type])
}
